{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Airlock Agent Registry Entry",
  "description": "Schema for verifying AI agent identity and runtime metadata",
  "type": "object",
  "required": [
    "agent_id",
    "fingerprint",
    "public_key",
    "environment_hash",
    "verification_modes"
  ],
  "properties": {
    "agent_id": {
      "type": "string",
      "pattern": "^airlock://[a-zA-Z0-9-_]+/[a-zA-Z0-9-_\\.]+$",
      "description": "Unique protocol identifier for the agent"
    },
    "fingerprint": {
      "type": "string",
      "pattern": "^sha256:[a-fA-F0-9]{64}$",
      "description": "SHA-256 hash of model weights and metadata"
    },
    "public_key": {
      "type": "string",
      "description": "PEM-encoded public key used for signature verification"
    },
    "environment_hash": {
      "type": "string",
      "pattern": "^sha256:[a-fA-F0-9]{64}$",
      "description": "SHA-256 hash of runtime environment snapshot"
    },
    "last_verified": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last successful verification"
    },
    "verification_modes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["block", "stream"]
      },
      "description": "Supported verification modes"
    },
    "stream_interval": {
      "type": "string",
      "pattern": "^[0-9]+s$",
      "description": "Interval for stream verification (e.g., '60s')"
    }
  },
  "additionalProperties": false
}
